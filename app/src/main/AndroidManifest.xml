<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iessanclemente.PRO">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/proyecto_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/proyecto_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proyecto_PMDM">
        <activity
            android:name=".onboarding.OnBoardingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".onboarding.LoginActivity"
            android:exported="true" >
        </activity>

        <activity
            android:name=".onboarding.RegisterActivity"
            android:exported="true" >
        </activity>

        <activity
            android:name=".PostRecyclerView"
            android:exported="true" >
        </activity>

        <activity
            android:name=".Profile"
            android:exported="true"
            android:parentActivityName=".PostRecyclerView">
        </activity>

        <activity
            android:name=".AddPost"
            android:exported="true"
            android:parentActivityName=".PostRecyclerView">
        </activity>

        <activity
            android:name=".chat.ChatActivity"
            android:exported="true"
            android:parentActivityName=".PostRecyclerView">
        </activity>
    </application>

</manifest>